<%= form_with url: money_path, local:true, method: 'post' do |form| %>

  <div class="field">
    <input type="number" placeholder="Valor (R$)" class="field" <%= form.number_field :money, min: 0, step: 0.01 %>
  </div>

  <div class="actions" style="margin-top: 3px">
    <%= form.submit "Confirmar", id:'add-money-submit' %>
  </div>
  
<% end %>