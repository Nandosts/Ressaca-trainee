<html lang="en">

<%= stylesheet_link_tag 'card' %>


  <body style="background-color: #eee">
    <h1>Nossos Produtos</h1>
    <%= form_with url: search_url, method: 'get', local: true do |search| %>
      <div class="field">
        <%= search.label :search, 'Nome do produto' %>
        <%= search.text_field :search %>
      </div>

      <div class="field">
        <%= search.label :type, 'Filtros:' %>
        <%= search.select :price, options_for_select([['Faixa de preÃ§o', '0'],
                                                    ['Menos de 25 reais','0-25'],
                                                    ['Entre 25 e 50 reais','25-50'],
                                                    ['Entre 50 e 100 reais','50-100'],
                                                    ['Mais de 100 reais','100-MAX']]) %>
        <%= search.select :type, options_for_select((@drink_types.collect { |drink_type| [drink_type.name, drink_type.id] }) << ['Tipo de Bebida', '0'], 0) %>
      </div>

      <div class="actions">
        <%= search.submit 'Pesquisar' %>
      </div>
    <% end %>
    
