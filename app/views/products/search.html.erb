<!-- START PROJECTS SECTION -->

<section id="produtos" class="produtos-section">
  <div class="produtos-grid">
  <% @records.each do |product| %>
  <div class="product">
    <div class="imgbox">
      <%= image_tag product.photo, top: '30px', width: '90%', height: '80%'%>
    </div>
    <div class="specifice">
      <h2><%= product.name.capitalize %></h2>
      <div class="price">R$<%= product.value %></div>
      <a href="<%= product_path(product.id) %>">Saiba mais</a>
    </div>
</div>

  <% end %>
    
  </div>
</section>

