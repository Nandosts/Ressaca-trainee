<% @records.each do |product| %>
  <div class="card">
    <%= image_tag product.photo %>
    <div class="card-body">
      <h5 class="card-title"><%= product.name %></h5>
      <p class="card-text">
        <strong>Pre√ßo:</strong> <%= product.value %><br>
        <strong>Volume:</strong> <%= product.volume %> ml <br>
      </p>
      <a href="<%= product_path(product.id) %>" class="btn btn-primary">Saiba mais</a>
    </div>
  </div>
<% end %>

